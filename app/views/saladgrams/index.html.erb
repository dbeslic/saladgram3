<div class="page-header">
  <h1>
    Saladgrams

    <a href="/saladgrams/new" class="btn btn-lg btn-success">New Saladgram</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>User</th>

        <th>Chat</th>

        <th>Photo url</th>

        <th>Caption</th>

        <th>Actions</th>
      </tr>

      <% @saladgrams.each do |saladgram| %>
      <tr>

        <td><%= saladgram.user_id %></td>

        <td><%= saladgram.chat_id %></td>

        <td><%= saladgram.photo_url %></td>

        <td><%= saladgram.caption %></td>

        <td>

          <a href="/saladgrams/<%= saladgram.id %>" class="btn btn-primary">Show</a>
          <a href="/saladgrams/<%= saladgram.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_saladgram/<%= saladgram.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
