<div class="page-header">
  <h3>Prize #<%= @prize.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Prize name</dt>
      <dd><%= @prize.prize_name %></dd>


      <dt>Pic url</dt>
      <dd><%= @prize.pic_url %></dd>


      <dt>Sponsor name</dt>
      <dd><%= @prize.sponsor_name %></dd>


      <dt>Chat</dt>
      <dd><%= @prize.chat_id %></dd>


    </dl>

    <div class="btn-group btn-group-justified">

      <a href="/prizes" class="btn btn-primary">
        Back
      </a>
      <a href="/prizes/<%= @prize.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_prize/<%= @prize.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>

    </div>
  </div>
</div>
